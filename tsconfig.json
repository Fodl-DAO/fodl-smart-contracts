{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./typechain", "./node_modules/@types"],
    "types": ["@nomiclabs/hardhat-ethers", "@nomiclabs/hardhat-waffle"],
    "noImplicitAny": false
  },
  "include": [
    "./*.ts",
    "constants",
    "contracts",
    "deploy",
    "scripts",
    "test",
    "test-bsc",
    "test-integration",
    "test-polygon",
    "typechain",
    "utils"
  ]
}
